<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context="com.gamewae.iqra.MainActivity" >

	<LinearLayout
		android:id="@+id/mainTop"
		android:layout_width="match_parent"
		android:layout_height="600dp"
		android:layout_above="@+id/mainBottom"
		android:layout_marginBottom="1dp"
		android:gravity="center"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/imageView1"
			android:layout_width="181dp"
			android:layout_height="230dp"
			android:layout_gravity="center"
			android:layout_margin="10dp"
			android:adjustViewBounds="true"
			android:scaleType="fitCenter"
			android:src="@drawable/ic_iqra" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/mainBottom"
		android:layout_width="match_parent"
		android:layout_height="166dp"
		android:layout_alignParentBottom="true"
		android:layout_gravity="bottom"
		android:layout_marginBottom="-41dp"
		android:background="@color/putih"
		android:gravity="center"
		android:orientation="vertical"
		android:weightSum="2">

		<LinearLayout
			android:id="@+id/topInnerWrapper"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:orientation="horizontal"
			android:weightSum="2">


			<LinearLayout
				android:layout_width="5dp"
				android:layout_height="210dp"
				android:layout_weight="2"
				android:background="@drawable/gradient_red"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="10dp">

				<com.gamewae.iqra.widget.CustomImageButton
					android:id="@+id/btnSendiri"
					android:layout_width="90dp"
					android:layout_height="100dp"
					android:background="@null"
					android:src="@drawable/ic_sendiri" />

			</LinearLayout>

		</LinearLayout>

		<LinearLayout

			android:id="@+id/bottomInnerWrapper"
			android:layout_width="match_parent"
			android:layout_height="10dp"
			android:layout_weight="0"
			android:gravity="center"
			android:orientation="horizontal"
			android:weightSum="2">

		</LinearLayout>

		<TextView
			android:id="@+id/textView2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/jadi_pengajar"
			android:textColor="@color/putih"
			android:textSize="1dp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/textView1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/baca_sendiri"
			android:textColor="@color/putih"
			android:textSize="1dp"
			android:textStyle="bold" />

	</LinearLayout>

</RelativeLayout>
