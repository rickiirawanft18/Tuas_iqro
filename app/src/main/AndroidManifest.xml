        </activity>
        <activity
            android:name=".SectionActivity"
            android:label="@string/title_activity_section"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SectionViewActivity"
            android:label="@string/title_activity_section_view"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".PageListActivity"
            android:label="@string/title_activity_page_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_hint"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".TutorActivity"
            android:label="@string/title_activity_tutor"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>

    </application>

</manifest>
